<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AboutActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_me"/>

    <TextView
        android:id="@+id/tv_name_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/waslim"
        android:textColor="#009688"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/tv_connect_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/connect_with_me"
        android:textColor="#00838F"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_about"
        app:layout_constraintStart_toStartOf="@+id/tv_name_about"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_about" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/tv_connect_about"
        app:layout_constraintStart_toStartOf="@+id/tv_connect_about"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_about" />

    <ImageView
        android:id="@+id/iv_ig_about"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/instagram"
        android:contentDescription="@string/instagram"
        app:layout_constraintStart_toStartOf="@+id/tv_connect_about"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/iv_github_about"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/github"
        app:layout_constraintStart_toStartOf="@+id/tv_connect_about"
        app:layout_constraintTop_toBottomOf="@+id/iv_ig_about"
        android:contentDescription="@string/github" />

    <ImageView
        android:id="@+id/iv_linkedin_about"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/linkedin"
        app:layout_constraintStart_toStartOf="@+id/tv_connect_about"
        app:layout_constraintTop_toBottomOf="@+id/iv_github_about"
        android:contentDescription="@string/linkedin" />

    <TextView
        android:id="@+id/tv_link_ig"
        style="@style/TextConnect"
        android:text="@string/link_ig"
        android:textColor="#1976D2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ig_about"
        app:layout_constraintEnd_toEndOf="@+id/tv_connect_about"
        app:layout_constraintStart_toEndOf="@+id/iv_ig_about"
        app:layout_constraintTop_toTopOf="@+id/iv_ig_about"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_link_github"
        style="@style/TextConnect"
        android:text="@string/link_github"
        android:textColor="#1976D2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_github_about"
        app:layout_constraintEnd_toEndOf="@+id/tv_connect_about"
        app:layout_constraintStart_toEndOf="@+id/iv_github_about"
        app:layout_constraintTop_toTopOf="@+id/iv_github_about" />

    <TextView
        android:id="@+id/tv_link_linkedin"
        style="@style/TextConnect"
        android:text="@string/link_linkedin"
        android:textColor="#1976D2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_linkedin_about"
        app:layout_constraintEnd_toEndOf="@+id/tv_connect_about"
        app:layout_constraintStart_toEndOf="@+id/iv_linkedin_about"
        app:layout_constraintTop_toTopOf="@+id/iv_linkedin_about" />

</androidx.constraintlayout.widget.ConstraintLayout>