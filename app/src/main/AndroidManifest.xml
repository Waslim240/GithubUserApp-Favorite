<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="waslim.githubuserapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/github_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/github_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUserApp"
        tools:targetApi="31">
        <activity
            android:name=".view.AboutActivity"
            android:exported="true" />
        <activity
            android:name=".view.DarkModeSettingActivity"
            android:exported="true" />
        <activity
            android:name=".view.UserFavoriteActivity"
            android:exported="true" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.UserDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>
    </application>

</manifest>